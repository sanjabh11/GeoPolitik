# Python Services Environment Configuration
# Copy this file to .env and configure your values

# Service Configuration
PYTHON_SERVICE_HOST=0.0.0.0
PYTHON_SERVICE_PORT=8001
PYTHON_SERVICE_RELOAD=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/game_theory
REDIS_URL=redis://localhost:6379

# External API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Papers with Code API
PAPERS_WITH_CODE_API_KEY=your_papers_with_code_api_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# External Services
PYTHON_SERVICE_URL=http://localhost:8001
GAMBIT_SERVICE_URL=http://localhost:8001/gambit
MARL_SERVICE_URL=http://localhost:8001/marl
BACKTESTING_SERVICE_URL=http://localhost:8001/backtesting
RESEARCH_SERVICE_URL=http://localhost:8001/research
